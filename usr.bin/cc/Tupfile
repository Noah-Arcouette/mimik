include_rules

# toolchain build
: lexer.l  |> !host_lex  |>
: parser.y |> !host_yacc |>

: lex.yy.c | y.tab.h            |> !host_cc   |> ./obj/%B.o {obj}
: foreach *.c ^lex.yy.c ^test.c |> !host_cc   |> ./obj/%B.o {obj}
: {obj}                         |> !host_ccld |> $(ROOT)/toolchain/cc | $(ROOT)/<toolchain>

: test.c | $(ROOT)/<toolchain> |> $(VALGRIND) $(ROOT)/toolchain/cc < test.c |>
